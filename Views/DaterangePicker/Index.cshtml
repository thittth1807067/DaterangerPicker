@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>

<input type="text" name="dateRanger" value="" />
@section script{
    <script type="text/javascript">
        var start = moment().subtract(29, 'days');
        var end = moment();
        $('input[name="dateRanger"]').daterangepicker({
            startDate: start,
            endDate: end,
            ranges: {
                'Today': [moment(), moment()],
                'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                'This Month': [moment().startOf('month'), moment().endOf('month')],
                'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
            }
        });
        $('input[name="dateRanger"]').on('apply.daterangepicker', function (ev, picker) {
            window.location.href = '/DaterangerPicker/Index?start=${picker.startDate.format(D/MM/YYYY)}&end=${picker.startDate.format(D/MM/YYYY)}}'
        });
    </script>
}